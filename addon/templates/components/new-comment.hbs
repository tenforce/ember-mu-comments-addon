<div class="new-comment">
  <div class="message">
    {{textarea value=comment.message id="newCommentContent" name="newCommentContent" placeholder=textAreaPlaceholder key-down="keyPress"}}
  </div>
  <div class="notify">
    {{#if searchingForUser}}
      <label>Notify:</label>
      <div class="notified-users">
        <ul>
          {{#each assignedUsers as |user|}}
            <li><span>{{user.name}}</span> <button class="remove" {{action "removeAssigned" user}}>x</button></li>
          {{/each}}
        </ul>
      </div>
      {{user-search index=index assignedUsers=assignedUsers availableUsers=availableUsers closeAfterAdding=(not multiAdds) addAssigned="addAssigned" closeSearch="closeSearch" }}
    {{/if}}
  </div>
</div>
<button type="button" class="btn btn--post-comment" name="submitNewComment" {{action "createComment"}}>{{addButtonLabel}}</button>
