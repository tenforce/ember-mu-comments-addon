{{#if emptyShownAssignments}}
  <span class="msg msg--empty">No notifications to display</span>
{{else}}
  <div class="visible-comments">
    {{#each shownAssignments as |assignment index|}}
      {{display-assignment assignment=assignment index=index handleClick="handleClick"}}
    {{/each}}
  </div>
{{/if}}

{{#unless emptyHiddenAssignments}}
  <div class="toggle-hidden-comments {{if showHidden "show" "hide"}}"  {{action 'toggleShowHidden'}}>
    <h2>
      <span title={{tooltipShowHidden}}>Hidden</span>
    </h2>
  </div>
  {{#if showHidden}}
    {{#if emptyHiddenAssignments}}
      <span class="msg msg--empty">No hidden notifications to display</span>
    {{else}}
      <div class="hidden-comments">
        {{#each hiddenAssignments as |assignment index|}}
          {{display-assignment assignment=assignment index=index handleClick="handleClick"}}
        {{/each}}
      </div>
    {{/if}}
  {{/if}}
{{/unless}}